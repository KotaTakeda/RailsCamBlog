<div id="main">
<%= image_tag 'main-img.jpg'%>
</div>
<div id="article_wrap">
    <div id="article_list">
        <% @articles.each do |article| %>
        <%= render article%>
        <% end %>
    </div>
    <div id="sidebar">
        <h2>PV数ランキング</h2>
        <ul>
        <% Article.ranking.each do |article|%>
            <li><%= link_to article.title, article%>(<%= article.views%>pv)</li>
        <% end %>
        </ul>
        
    </div>
    <div class="clear"></div>
</div>